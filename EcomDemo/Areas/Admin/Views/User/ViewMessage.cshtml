        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Customer Details</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <h6>@Model.Name</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <h6>@Model.Email</h6>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Mobile Number</label>
                                        <h6>@Model.MobileNumber</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Contact Date and Time</label>
                                        <h6 style="color: #ef0303;">@Model.ContactDate</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
