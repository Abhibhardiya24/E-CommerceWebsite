@model EcomDemo.Model.ContactWithUs
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Striped Table with Hover</h4>
                <p class="category">Here is a subtitle for this table</p>
                @*<a href="@Url.Action("Create","User")" class="btn btn-info btn-fill pull-right">Add User</a>*@
            </div>

            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <th>SrNo</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>MobileNumber</th>
                        @*<th>Subject</th>
                            <th>Message</th>*@
                        <th>Contact Date</th>
                        <th>Action</th>

                    </tr>
                    <tbody>

                        @foreach (var item in Model.contactLists)
                        {
                            <tr>
                                <td>@item.SrNo</td>
                                <td>
                                    <a title="View User" href="@Url.Action("EditUser", "User", new { ID = item.UID })">
                                        @*<i title="View User">@item.Name</i>*@
                                        @item.Name
                                    </a>
                                </td>
                                <td>@item.Email</td>
                                <td>@item.MobileNumber</td>
                                @*<td>@item.Subject</td>
                                    <td>@item.Message</td>*@
                                <td>@item.ContactDate</td>
                                <td>
                                    @*<a href="@Url.Action("ViewMessage", "User", new { ContactDate = item.ContactDate, ID = item.UID })" class="icon-link">
                                            <i class="fa fa-eye" title="View"></i>
                                        </a>*@
                                    <a href="@Url.Action("ViewMessage", "User", new { CoID = item.CoID })" class="icon-link">
                                        <i class="fa fa-eye" title="View Message"></i>
                                    </a>
                                    @*<a href="@Url.Action("DeleteMessage", "User", new { ContactDate = item.ContactDate, ID = item.UID })" class="icon-link"
                                           onclick="return confirm('Are you sure you want to delete this message?');" style="color:orangered;">
                                            <i class="fas fa-trash-alt" title="Delete"></i>
                                        </a>*@
                                    <a href="@Url.Action("DeleteMessage", "User", new { CoID = item.CoID })" class="icon-link"
                                       onclick="return confirm('Are you sure you want to delete this message?');" style="color:orangered;">
                                        <i class="fas fa-trash-alt" title="Delete Message"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<style>
    .icon-link {
        margin-right: 10px; /* Adjust the value to control the space between icons */
    }
</style>

