@model EcomDemo.Model.AddEditUserModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Striped Table with Hover</h4>
                <p class="category">Here is a subtitle for this table</p>
                <a href="@Url.Action("Create","User")" class="btn btn-info btn-fill pull-right">Add User</a>
            </div>
            <br/>
            <br/>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <tr>
                        <th>SrNo</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>CreateDate</th>
                        <th>Action</th>
                    </tr>

                    <tbody>

                        @foreach (var item in Model.adminViewModel)
                        {
                            <tr>
                                <td>@item.SrNo</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.Contact</td>
                                <td>@item.Address</td>
                                <td>
                                    @if (item.Status == true)
                                    {
                                        <p style="color: #0de00d; ">Active</p>
                                    }
                                    else if (item.Status == false)
                                    {
                                        <p style="color: #ef0303; ">InActive</p>
                                    }
                                </td>
                                <td>@item.CreateDate</td>
                                <td>
                                    <a href="@Url.Action("EditUser", "User", new { ID = item.ID })" class="icon-link">
                                        <i class="fas fa-edit" title="Edit"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteUser", "User", new { ID = item.ID })" class="icon-link"
                                       onclick="return confirm('Are you sure you want to delete this user?');" style="color:orangered;">
                                        <i class="fas fa-trash-alt" title="Delete"></i>
                                    </a>

                                    @*<a href="@Url.Action("DeleteUser", "User", new { ID = item.ID })" style="color:orangered">Delete</a>*@
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<style>
    .icon-link {
        margin-right: 10px; /* Adjust the value to control the space between icons */
    }
</style>
