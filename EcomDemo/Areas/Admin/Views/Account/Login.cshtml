@model EcomDemo.Models.AdminViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <style>
        .LoginValidation {
            color: red;
        }
    </style>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Light Bootstrap Dashboard by Creative Tim</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Ecom" />
    <!-- Bootstrap core CSS     -->
    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/Areas/Admin/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/Areas/Admin/assets/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Areas/Admin/assets/css/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="a~/Areas/Admin/ssets/css/pe-icon-7-stroke.css" rel="stylesheet" />
</head>
<body>
    @*@if (@ViewBag.UserName != null)
        {

            <div class="content">
                <div class="container-fluid">
                    <center style="color: red">@ViewBag.UserName</center>
                </div>
            </div>
                }*@
    <div class="wrapper">

        <div class="main-panel">

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-2">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Admin Login</h4>
                                </div>


                                <div class="content">
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.returnUrl, new { Value = ViewBag.returnUrl })

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Username</label>
                                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "LoginValidation" })

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Password</label>
                                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                                    @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "LoginValidation" })*@
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-info btn-fill pull-right">Login</button>

                                        <a href="@Url.Action("ForgotPassword", "Account")">
                                            Forgot Password
                                        </a>
                                        //, new { UserName = Model.UserName }

                                        <div class="clearfix"></div>
                                    }




                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

  
</body>

</html>
<!--   Core JS Files   -->
<script src="~/Areas/Admin/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="~/Areas/Admin/assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Charts Plugin -->
<script src="~/Areas/Admin/assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="~/Areas/Admin/assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="~/Areas/Admin/assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="~/Areas/Admin/assets/js/demo.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
<script>
     @if (@ViewBag.LoginError != null)
                                {
                                    <text>
    toastr.error('Login failed. Enter the Correct UserName or Password', 'Login Error');
                                    </text>

                                }

    @if (TempData["ForgotPasswordChanged"] != null)
            {
         <text>

    toastr.success('Your automated generated Password sent successfully to your email!', 'Check Your Email...');

                                    </text>
            }
      @if(TempData["ChangedPassword"] != null)
            {
         <text>

    toastr.success('Your Password has been changed!', 'Login Again...');

                                    </text>
            }
    
</script>