@model EcomDemo.Model.AddEditProductModel
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Edit Product</h4>
            </div>

            <div class="content">
                @using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <form>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.ID, new { id = "P_ID", name = "P_ID" })
                                    <label>Name</label>
                                    @*<input type="text" class="form-control" placeholder="Home Address" value="Bld Mihail Kogalniceanu, nr. 8 Bl 1, Sc 1, Ap 09">*@
                                    @Html.TextAreaFor(model => model.ProductName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Description</label>
                                    @Html.TextBoxFor(model => model.ProductDescription, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Photo</label>
                                    <img src="~/Areas/Image/@Model.ProductPhoto " height=100 width=200 />
                                    @Html.TextBoxFor(model => model.ProductPhoto, new { type = "file", @class = "form-control", name = "ProductPhoto", id = "ProductPhoto" })
                                </div>
                            </div>
                            <div class="col-md-6">  
                                <div class="form-group">
                                    <label>Price</label>
                                    @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    @Html.DropDownListFor(model => model.Status,
                                    new SelectList(new List<SelectListItem>
                               {
                                    new SelectListItem { Text = "Active", Value = "True" },
                                    new SelectListItem { Text = "InActive", Value = "False" }
                               },
                                    "Value", "Text"), new { @class = "form-control" })

                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right">Edit Product</button>
                        <div class="clearfix"></div>
                    </form>
                }

            </div>
        </div>
    </div>
</div>

