@model EcomDemo.Model.AddEditProductModel
@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Add Product</h4>
            </div>
            <div class="content">
                @using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <form>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Name</label>
                                    @*<input type="text" class="form-control" placeholder="Home Address" value="Bld Mihail Kogalniceanu, nr. 8 Bl 1, Sc 1, Ap 09">*@
                                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Description</label>
                                    @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Image</label>
                                    @Html.TextBoxFor(model => model.ProductPhoto,null, new { type = "file", @class = "form-control" , name = "ProductPhoto", id = "ProductPhoto" })
                                </div>
                            </div>
                            <div class="col-md-6" style="margin-left: -600px;">
                                <div class="form-group">
                                    <label>Price</label>
                                    @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control" })
                                </div>
                            </div>
                            

                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right">Add Product</button>
                        <div class="clearfix"></div>
                    </form>
                }

            </div>
        </div>
    </div>
</div>
