
@model EcomDemo.Model.OrderList
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Order Details</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <h6>@Model.UserName</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <h6>@Model.Email</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Contact</label>
                                        <h6>@Model.MobileNumber</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Address</label>
                                        <h6>@Model.Address</h6>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Bill No.</label>
                                        <h6 style="color: #ef0303;">@Model.BillNo</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Payment Mode</label>
                                        @if (Model.PaymentMode == 1)
                                        {
                                            <h6>Direct Bank Transfer</h6>
                                        }
                                        @if (Model.PaymentMode == 2)
                                        {
                                            <h6>COD</h6>
                                        }
                                        @if (Model.PaymentMode == 3)
                                        {
                                            <h6>Cheque Payment</h6>
                                        }
                                    </div>
                                    <div class="form-group">
                                        <label>Transaction Id</label>
                                        <h6>@Model.TransactionID</h6>
                                    </div>
                                    <div class="form-group">
                                        <label>Status</label>

                                        @if (Model.Status == 1)
                                        {
                                            <h6 style="color: #a1ef53; ">Received</h6>
                                        }
                                        @if (Model.Status == 2)
                                        {
                                            <h6 style="color: #4461fa; ">In Process</h6>
                                        }
                                        @if (Model.Status == 3)
                                        {
                                            <h6 style="color: #9a9009; ">Shipped</h6>
                                        }
                                        @if (Model.Status == 4)
                                        {
                                            <h6 style="color: #a44f4f; ">Delivered</h6>
                                        }
                                        @if (Model.Status == 5)
                                        {
                                            <h6 style="color: #ff0000; ">Order Cancel</h6>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
                <div class="content table-responsive table-h-width">
                    <table class="table table-hover table-striped custom-bordered-table">
                        <tr>
                            <th>SrNo</th>
                            <th>Name</th>
                            @*<th>Product Description</th>*@
                            <th>Photo</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                        <tbody>

                            @foreach (var item in Model.orderLists)
                            {
                                <tr>
                                    <td>@item.SrNo</td>

                                    <td>
                                        @*<a href="@Url.Action("UserDetails", "Order", new {BillNo = item.BillNo})" style="color:red">*@
                                        @item.ProductName
                                        @*</a>*@
                                    </td>
                                    <!--<td>-->
                                    @*<a href="@Url.Action("Index", "User")">*@
                                    <!--@item.ProductDescription-->
                                    @*</a>*@
                                    <!--</td>-->
                                    @*<td>@item.ProductPhoto</td>*@
                                    <td><img src="~/Areas/Image/@item.ProductPhoto" height=100 width=125 /></td>
                                    <td>@item.ProductQuantity</td>
                                    @*style="text-align: center;"*@
                                    <td>@item.ProductPrice.ToString("C0", new System.Globalization.CultureInfo("en-IN"))</td>



                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-user">
                    <div class="header">
                        <h4 class="title">Order Summary</h4>
                    </div>
                    <div class="content" style="height:300px;">
                        <div class="">
                            <table class="table">
                                <tr>
                                    <td><label>Total Quantity</label></td>
                                    <td style="text-align: right; color: #ef0303;">@Model.TotalQty</td>
                                </tr>
                                <tr>
                                    <td><label>CGST(2.5%)</label></td>
                                    <td style="text-align:right; color: #8de731;">@Model.Cgst.ToString("C0", new System.Globalization.CultureInfo("en-IN"))</td>
                                </tr>
                                <tr>
                                    <td><label>SGST(2.5%)</label></td>
                                    <td style="text-align: right; color: #8de731; ">@Model.Sgst.ToString("C0", new System.Globalization.CultureInfo("en-IN"))</td>
                                </tr>
                                <tr>
                                    <td><label>IGST(2.5%)</label></td>
                                    <td style="text-align: right; color: #8de731; ">@Model.Igst.ToString("C0", new System.Globalization.CultureInfo("en-IN"))</td>
                                </tr>
                                <tr>
                                    <td><label>Sub Total</label></td>
                                    <td style="text-align: right; color: #061b8f; ">@Model.SubTotal.ToString("C0", new System.Globalization.CultureInfo("en-IN"))</td>
                                </tr>
                                <tr>
                                    <td><label>Total Amount</label></td>
                                    <td style="text-align: right; color: #0b2ff3; ">@Model.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("en-IN"))</td>
                                </tr>
                            </table>


                        </div>

                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

                    </div>
                </div>

                <div class="card">
                    <div class="header">
                        <h4 class="title">Change Order Status</h4>
                    </div>
                    <div class="content">
                        @using (Html.BeginForm("ChangeOrderStatus", "Order", FormMethod.Post))
                         {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.BillNo, new { Value = Model.BillNo })
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Status, 1, new { @class = "form-check-input", id = "received" })
                                            <label class="form-check-label font-weight-bold" for="received">Received</label>
                                        </div>
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Status, 2, new { @class = "form-check-input", id = "inProcess" })
                                            <label class="form-check-label font-weight-bold" for="inProcess">In Process</label>
                                        </div>
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Status, 4, new { @class = "form-check-input", id = "delivered" })
                                            <label class="form-check-label font-weight-bold" for="delivered">Delivered</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Status, 3, new { @class = "form-check-input", id = "shipped" })
                                            <label class="form-check-label font-weight-bold" for="shipped">Shipped</label>
                                        </div>
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.Status, 5, new { @class = "form-check-input", id = "cancel" })
                                            <label class="form-check-label font-weight-bold" for="cancel">Cancel</label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-info btn-fill pull-right" style="max-width: 100%;">Update Status</button>
                                </div>
                            </div>
                         }


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@


<style>
    .custom-bordered-table {
        border: 1px solid #ddd; /* Add the border style you want */
    }
</style>